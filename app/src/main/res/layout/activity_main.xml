<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">



        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/coffee"/>
        <TextView
                android:id="@+id/quantity_text_view"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/minus_button_id"
                android:layout_below="@id/quantity_id"
                android:textSize="36sp"
                android:padding="20dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        <TextView
                android:padding="20dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:text="Quantity:"
                android:id="@+id/quantity_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="36sp"
                android:textColor="@android:color/white"
        />
        <TextView
                android:padding="20dp"
                android:fontFamily="sans-serif"
                android:text="Summary:"
                android:textStyle="bold"
                android:layout_below="@id/quantity_text_view"
                android:id="@+id/priceTag_text_view"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="36sp"
                android:textColor="@android:color/white"
        />
        <TextView
                android:id="@+id/summary_text_view"
                android:text="Rs0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/priceTag_text_view"
                android:textSize="36sp"
                android:padding="20dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/minus_button_id"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@android:color/white"
                android:text="-"
                android:textSize="23sp"
                android:layout_margin="20dp"
                android:layout_below="@id/quantity_id"
                android:onClick="decOrder"/>
        <Button
                android:backgroundTint="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plus_button_id"
                android:text="+"
                android:textColor="@android:color/white"
                android:layout_toEndOf="@id/quantity_text_view"
                android:textSize="23sp"
                android:layout_margin="20dp"
                android:onClick="incOrder"
                android:layout_below="@id/quantity_id"/>
        <Button
                android:id="@+id/order_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/summary_text_view"
                android:onClick="submitOrder"
                android:text="Order"
                android:layout_margin="20dp"
                android:layout_centerHorizontal="true"/>



</RelativeLayout>